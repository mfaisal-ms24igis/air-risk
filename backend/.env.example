# ==========================
# DJANGO CONFIGURATION
# ==========================
# Generate a secret key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-minimum-50-characters-random-CHANGE-THIS
DEBUG=True  # Set to False in production
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================
# DATABASE (PostgreSQL + PostGIS)
# ==========================
# Format: postgis://username:password@host:port/database_name
POSTGRES_DB=air_risk
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost  # Use 'db' for Docker
POSTGRES_PORT=5432

# Alternative: DATABASE_URL format
# DATABASE_URL=postgis://postgres:postgres@localhost:5432/air_risk

# ==========================
# SITE CONFIGURATION
# ==========================
SITE_URL=http://localhost:8000
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ==========================
# GOOGLE EARTH ENGINE
# ==========================
# ⚠️ CRITICAL: DO NOT COMMIT THE ACTUAL JSON FILE!
# Place your GEE service account JSON in backend/ directory
# The filename should be gitignored (see .gitignore)
GEE_SERVICE_ACCOUNT_KEY=gee-service-account.json

# Optional: Directly specify service account email if needed
# GEE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com

# ==========================
# OPENAQ API (Optional)
# ==========================
# Get your API key from: https://openaq.org/
OPENAQ_API_KEY=your-openaq-api-key-here
OPENAQ_BASE_URL=https://api.openaq.org/v2

# ==========================
# LM STUDIO (Local AI - Optional)
# ==========================
# For AI-powered health insights generation
# Download and run LM Studio from: https://lmstudio.ai/
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=local-model
LM_STUDIO_ENABLED=True
CDSE_CLIENT_SECRET=your-cdse-client-secret-from-registration

# OpenAQ
# Get API key at: https://openaq.org/
OPENAQ_API_KEY=your-openaq-api-key-here

# Email (Brevo/SendGrid)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL=noreply@airrisk.pk

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Data paths
RASTER_DATA_PATH=/app/data/rasters
WORLDPOP_DATA_PATH=/app/data/worldpop
DISTRICTS_DATA_PATH=/app/data/districts
