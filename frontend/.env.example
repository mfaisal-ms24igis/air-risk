# ==========================
# BACKEND API
# ==========================
# Django backend API base URL
VITE_API_URL=http://localhost:8000/api/v1

# ==========================
# MAP CONFIGURATION
# ==========================
# Optional: Mapbox access token for satellite basemap
# Get from: https://account.mapbox.com/access-tokens/
# Note: MapLibre GL works without Mapbox token using OSM tiles
VITE_MAPBOX_TOKEN=your-mapbox-token-here-optional

# Default map center (Islamabad, Pakistan)
VITE_MAP_CENTER_LAT=33.6844
VITE_MAP_CENTER_LNG=73.0479
VITE_MAP_DEFAULT_ZOOM=6

# ==========================
# FEATURES
# ==========================
# Enable/disable premium features in UI
VITE_ENABLE_PREMIUM_FEATURES=true

# Enable AI insights
VITE_ENABLE_AI_INSIGHTS=true

# ==========================
# ANALYTICS (Optional)
# ==========================
# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Plausible Analytics domain
# VITE_PLAUSIBLE_DOMAIN=airrisk.com

# ==========================
# SENTRY (Production Monitoring)
# ==========================
# VITE_SENTRY_DSN=https://your-sentry-dsn-here
# VITE_SENTRY_ENVIRONMENT=development

# ==========================
# APP METADATA
# ==========================
VITE_APP_NAME=AIR RISK
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Air Quality Exposure & Risk Intelligence Platform
